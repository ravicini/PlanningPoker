<UserControl x:Class="PlanningPoker.Views.CardTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="173" d:DesignWidth="173">
    <Canvas Background="{StaticResource PhoneAccentBrush}"
            Tap="OnImageTap" Margin="0">
        <TextBlock x:Name="mainText"
                   Text="10"
                   Foreground="White"
                   FontSize="100" Padding="0" Margin="0" />
        <TextBlock x:Name="infoText"
                   Text="storypoints"
                   TextAlignment="Right"
                   FlowDirection="RightToLeft"
                   Foreground="White"
                   Canvas.Left="170" Canvas.Top="137"
                   FontSize="25"/>
    </Canvas>
</UserControl>
